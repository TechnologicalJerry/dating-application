{
    "name": "dating-application",
    "version": "1.0.0",
    "description": "Full-stack ready dating & real-time chat backend (Express + TypeScript + MongoDB)",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "rimraf dist && tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "start:prod": "cross-env NODE_ENV=production node dist/index.js",
        "lint": "eslint \"src/**/*.{ts,js}\"",
        "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
        "format": "prettier \"{src,tests}/**/*.{ts,js,json,md}\" --write",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "prepare": "husky install",
        "clean": "rimraf dist",
        "check-types": "tsc --noEmit"
    },
    "keywords": [
        "node",
        "typescript",
        "express",
        "mongodb",
        "socket.io",
        "dating-app",
        "chat-app",
        "backend"
    ],
    "author": {
        "name": "TechnoJerry",
        "email": "contact@technojerry.com",
        "url": "https://technojerry.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TechnologicalJerry/dating-application.git"
    },
    "bugs": {
        "url": "https://github.com/TechnologicalJerry/dating-application/issues"
    },
    "homepage": "https://github.com/TechnologicalJerry/dating-application#readme",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.3.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.5.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "redis": "^4.7.0",
        "socket.io": "^4.7.5",
        "uuid": "^9.0.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.0.0",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.8",
        "typescript": "^5.6.0",
        "tsx": "^4.19.0",
        "eslint": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.0",
        "prettier": "^3.3.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "supertest": "^7.0.0",
        "husky": "^9.0.0",
        "lint-staged": "^15.2.0",
        "rimraf": "^5.0.0"
    },
    "lint-staged": {
        "src/**/*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}